<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layoutMenu"
        android:orientation="horizontal"
        android:background="@color/app_background_color"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim_20dp"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/cookProfile"
            android:contentDescription="@string/profile_pic"
            android:layout_width="@dimen/dim_100dp"
            android:layout_height="@dimen/dim_100dp"
            android:background="@drawable/circle"
            android:layout_marginVertical="@dimen/dim_10dp"
            android:layout_marginHorizontal="@dimen/dim_10dp"
           />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_5dp"
    android:layout_marginBottom="0dp"
    android:orientation="horizontal">

