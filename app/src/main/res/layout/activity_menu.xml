        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dim_5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim_50dp"
                    android:layout_marginEnd="@dimen/dim_50dp"
                    android:layout_marginVertical="@dimen/dim_10dp"
                    android:text="Id"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/textId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dim_10dp"
                    android:layout_marginLeft="@dimen/dim_5dp"
                    android:layout_marginStart="@dimen/dim_5dp"
                    android:text="cookId"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/nameHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_30dp"
            android:layout_marginEnd="@dimen/dim_30dp"
            android:layout_marginVertical="@dimen/dim_10dp"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="@color/black" />
            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dim_10dp"
                android:text="cookname"
                android:textColor="@color/black"
                />

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
            android:id="@+id/ratingHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_30dp"
            android:layout_marginEnd="@dimen/dim_30dp"
            android:layout_marginVertical="@dimen/dim_10dp"
            android:text="Rating"
                android:textStyle="bold"
            android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dim_10dp"
                    android:text="CookRating"
                    android:textColor="@color/black" />


            </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/dishHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_15dp"
            android:layout_marginEnd="@dimen/dim_15dp"
            android:layout_marginVertical="@dimen/dim_10dp"
            android:text="Best Dish"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textDish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dim_10dp"
            android:text="CookBestDish"
            android:textColor="@color/black" />
</LinearLayout>
        </LinearLayout>

    </LinearLayout>


<!-- TabLayout fo showing tabs-->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabTextColor="@color/white"
            app:tabBackground="@color/app_color"
            app:tabIndicatorColor="@color/white"
            android:layout_below="@+id/layoutMenu">

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                android:background="@drawable/shape">
            </com.google.android.material.tabs.TabItem>

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lunch"
                android:background="@color/bottom_navigation_color">
            </com.google.android.material.tabs.TabItem>

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dinner"
                android:background="@color/bottom_navigation_color">
            </com.google.android.material.tabs.TabItem>
        </com.google.android.material.tabs.TabLayout>

<!-- We use ViewPager to flip left and right through pages -->
          <androidx.viewpager.widget.ViewPager
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@+id/tabs"
              android:id="@+id/viewPager">

          </androidx.viewpager.widget.ViewPager>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bill"
        app:cardCornerRadius="@dimen/dim_20dp"
        app:cardBackgroundColor="@color/app_color"
        android:layout_margin="@dimen/dim_10dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:textSize="@dimen/font_25sp"
        android:layout_margin="@dimen/dim_5dp"
        android:textColor="@color/white"
        android:padding="@dimen/dim_5dp">

    </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amount"
            android:text="Rs.200"

            android:padding="@dimen/dim_5dp"
            android:textSize="@dimen/font_18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dim_150dp"
            android:layout_marginStart="@dimen/dim_150dp"
            android:drawableEnd="@drawable/arrow_right"
            android:drawableRight="@drawable/arrow_right">

        </TextView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>