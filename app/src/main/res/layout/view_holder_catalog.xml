<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/catalog"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dim_10dp"
    android:layout_marginHorizontal="@dimen/dim_20dp"
    android:layout_marginVertical="@dimen/dim_10dp"
    app:cardElevation="@dimen/dim_20dp">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            android:layout_margin="@dimen/dim_5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile"
                android:contentDescription="@string/profile_pic"
                android:layout_width="@dimen/dim_40dp"
                android:layout_height="@dimen/dim_40dp"
                android:layout_marginHorizontal="@dimen/dim_5dp"
                android:background="@drawable/circle"
                android:src="@drawable/profile_icon">
            </ImageView>

            <TextView
                android:id="@+id/cook_name"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:text="Cook_Name"
                android:textSize="@dimen/font_20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="@dimen/dim_10dp"
                android:textColor="@color/black"
                android:fontFamily="Metropolis">
            </TextView>

            <TextView
                android:id="@+id/rating"
                android:layout_width="@dimen/dim_25dp"
                android:layout_height="@dimen/dim_25dp"
                android:layout_marginVertical="@dimen/dim_6dp"
                android:padding="@dimen/dim_3dp"
                android:text="5"
                android:fontFamily="Oswald"
                android:background="@drawable/circle"
                android:textSize="@dimen/font_10sp"
                android:textColor="@color/white">
            </TextView>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_below="@+id/layout1"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_200dp"
            android:scaleType="fitXY"
            android:src="@drawable/biryani">
        </ImageView>

</LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>